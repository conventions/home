<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">


       <factory>
            <exception-handler-factory>com.jsf.conventions.util.ViewExpiredExceptionExceptionHandlerFactory</exception-handler-factory>
       </factory>
	 
         <application>
            <action-listener>com.jsf.conventions.exception.ConventionsActionListenerImpl</action-listener>
        </application>      
      
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>errorPage</from-outcome>
            <to-view-id>/error.faces</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/home.faces</to-view-id>   
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>securityList</from-outcome>
            <to-view-id>/pages/security/listUser.faces</to-view-id>   
            <redirect/>
        </navigation-case>
    </navigation-rule>


</faces-config>
